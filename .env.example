# Database
DATABASE_URL=postgresql://user:password@host:5432/photonictag

# Server
PORT=5000
NODE_ENV=production

# Session (REQUIRED in production - generate a random 64+ character string)
SESSION_SECRET=your-super-secret-session-key-minimum-64-characters-long

# Admin Users (comma-separated email addresses)
MASTER_ADMIN_EMAILS=admin@example.com

# OAuth Providers (optional - enable SSO)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# OpenAI (optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Email (optional - for password reset, verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=https://yourdomain.com

# App URL (for OAuth callbacks)
APP_URL=https://yourdomain.com

# Passwordless.dev Authentication (optional - for passwordless login)
PASSWORDLESS_API_URL=https://v4.passwordless.dev
PASSWORDLESS_PUBLIC_KEY=your-passwordless-public-key
PASSWORDLESS_SECRET_KEY=your-passwordless-secret-key
